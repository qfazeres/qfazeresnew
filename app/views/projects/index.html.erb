<div class="container">
  <div class="row">

    <p id="notice"><%= notice %></p>

    <div class="col-md-12">
      <div class="panel panel-info">
        <div class="panel-heading">
          <div class="row">
            <h5 class="col-md-10">Listagem de Projetos</h5>
            <div class="col-md-2">
              <%= link_to 'Novo Projeto', new_project_path, class: "btn btn-warning pull-right" %>
            </div>
          </div>
        </div>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Título</th>
              <th>Cliente</th>
              <th class="col-md-2"></th>
            </tr>
          </thead>
          <tbody>
            <% @projects.each do |project| %>
            <tr>
              <td><%= project.id %></td>
              <td><%= project.title %></td>
              <td><%= project.client %></td>
              <td>
                <div class="btn-group pull-right">
                  <%= link_to project, class: "btn btn-info" do %><i class="glyphicon glyphicon-eye-open"></i><% end %>
                  <%= link_to edit_project_path(project), class: "btn btn-info" do %><i class="glyphicon glyphicon-edit"></i><% end %>
                  <%= link_to project, method: :delete, data: { confirm: 'Confirma exclusão ?' }, class: "btn btn-info" do %><i class="glyphicon glyphicon-trash"></i><% end %>
                </div>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

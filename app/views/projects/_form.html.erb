<%= form_for(@project) do |f| %>
<% if @project.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@project.errors.count, "error") %>
    prohibited this project from being saved:</h2>

  <ul>
    <% @project.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <div class="col-md-6">
    <%= f.label :title, "Titulo" %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
</div>
<div class="field">
  <div class="col-md-6">
    <%= f.label :client_id, "Cliente" %><br>
    <!-- <%= f.text_field :client_id %> -->
    <%= select("project", "client_id", Client.all.collect {|p| [ p.name, p.id ] }, {include_blank: 'Selecione'}, class: "form-control") %>
  </div>
</div>
<div class="field">
  <div class="col-md-12">
    <%= f.label :description, "Descrição" %><br>
    <%= f.text_area :description, class: "form-control" %>
  </div>
</div>

<div class="clearfix"></div>

<br>
<div class="col-md-12">
  <div class="actions pull-right">
    <%= f.submit "Salvar Projeto", class: "btn btn-warning" %>
  </div>
</div>
<% end %>

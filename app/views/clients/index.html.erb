<div class="container">
  <div class="row">

    <p id="notice"><%= notice %></p>

    <div class="col-md-12">
      <div class="panel panel-info">
        <div class="panel-heading">
          <div class="row">
            <h5 class="col-md-10">Listagem de Clientes</h5>
            <div class="col-md-2">
              <%= link_to new_client_path, class: "btn btn-warning pull-right" do %><b>Novo Cliente</b><% end %>
            </div>
          </div>
        </div>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Nome</th>
              <th class="col-md-2"></th>
            </tr>
          </thead>
          <tbody>
            <% @clients.each do |client| %>
            <tr>
              <td><%= client.id %></td>
              <td><%= client.name %></td>
              <td>
                <div class="btn-group pull-right">
                  <%= link_to client, class: "btn btn-info" do %><i class="glyphicon glyphicon-eye-open"></i><% end %>
                  <%= link_to edit_client_path(client), class: "btn btn-info" do %><i class="glyphicon glyphicon-edit"></i><% end %>
                  <%= link_to client, method: :delete, data: { confirm: 'Confirma exclusÃ£o ?' }, class: "btn btn-info" do %><i class="glyphicon glyphicon-trash"></i><% end %>
                </div>
              </td>
              <!-- <td><%= link_to 'Show', client %></td>
              <td><%= link_to 'Edit', edit_client_path(client) %></td>
              <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

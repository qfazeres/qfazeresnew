<div class="container">
  <div class="row">

    <!-- <p id="notice"><%= notice %></p> -->

    <div class="col-md-12">
      <div class="panel panel-info">
        <div class="panel-heading">
          <div class="row">
            <h5 class="col-md-10">Cliente</h5>
            <div class="col-md-2">
              <%= link_to edit_client_path(@client), class: "btn btn-warning pull-right" do %>
              <b>Editar
              <i class="glyphicon glyphicon-edit"></i></b>
              <% end %>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <div class="col-md-6">
            <label class="control-label" for="inputNome">Nome</label>
            <input class="form-control" disabled="" id="inputNome" type="text" value="<%= @client.name %>"></input>
          </div>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row">
            <h5 class="col-md-12">Projetos</h5>
          </div>
        </div>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>TÃ­tulo</th>
              <th class="col-md-2"></th>
            </tr>
          </thead>
          <tbody>
            <% Project.where(client_id: @client.id).each do |project| %>
            <tr>
              <td><%= project.id %></td>
              <td><%= project.title %></td>
              <td>
                <div class="btn-group pull-right">
                  <%= link_to project, class: "btn btn-info" do %>
                  <i class="glyphicon glyphicon-eye-open"></i><% end %>
                </div>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="clearfix"></div>
    <br>
  </div>
</div>

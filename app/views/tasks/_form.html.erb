<%= form_for(@task) do |f| %>
<% if @task.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@task.errors.count, "error") %>
    prohibited this task from being saved:</h2>

  <ul>
    <% @task.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <div class="col-md-6">
    <%= f.label :title, "Título" %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>
</div>
<div class="field">
  <div class="col-md-6">
    <%= f.label :project_id, "Projeto" %><br>
    <%= select("task", "project_id", Project.all.collect {|p| [ p.description, p.id ] }, {include_blank: 'Selecione'}, class: "form-control") %>
  </div>
</div>
<br>
<div class="field">
  <div class="col-md-12">
    <%= f.label :description, "Descrição" %><br>
    <%= f.text_area :description, class: "form-control" %>
  </div>
</div>

<div class="clearfix"></div>
<br>
<div class="col-md-12">
  <div class="actions pull-right">
    <%= f.submit "Salvar Tarefa", class: "btn btn-warning" %>
  </div>
</div>
<% end %>
